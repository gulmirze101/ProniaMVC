@using Pronia.ViewModels.ServiceFeatureViewModels
@model ServiceFeatureCreateVM
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input asp-for="Title" class="form-control" id="Title" placeholder="title">
				<span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input asp-for="Description" class="form-control" id="description" placeholder="Description">
				<span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input asp-for="Icon" class="form-control" id="image" placeholder="Image">
				<span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
    </div>
</div>