@model ServiceFeature
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4>@Model.Title Details</h4>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <img src="~/assets/images/website-images/@Model.IconPath" class="img-fluid rounded mb-3" />
                </div>
                <div class="col-md-7">
                    <table class="table table-bordered">
                        <tr>
                            <th>Title</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Description</td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>